---
import Layout from "../layouts/Layout.astro";
import FractionatedSolver from "../components/FractionatedSolver";
---

<Layout title="Fractionated Morse | Ciphered">
  <main class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">
        Fractionated Morse
      </h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">
        Solve fractionated Morse ciphers where letters represent Morse code
        triplets
      </p>
    </div>

    <FractionatedSolver client:load />
  </main>
</Layout>

